{
	"name": "@traek/react",
	"version": "0.0.3",
	"description": "React adapter for Træk – spatial tree-chat UI for AI agents",
	"author": "Nico Hülscher",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"build": "tsc --project tsconfig.build.json",
		"check": "tsc --noEmit",
		"lint": "prettier --check .",
		"clean": "rm -rf node_modules dist coverage .turbo",
		"format": "prettier --write .",
		"test": "vitest run"
	},
	"dependencies": {
		"@traek/core": "workspace:*",
		"dompurify": "^3.3.1",
		"highlight.js": "^11.11.1",
		"marked": "^17.0.1",
		"marked-highlight": "^2.2.3"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0",
		"react-dom": "^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
		"@types/dompurify": "^3.0.5",
		"@types/node": "^24",
		"@types/react": "^18.3.0",
		"@types/react-dom": "^18.3.0",
		"prettier": "^3.8.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"keywords": [
		"react",
		"ai",
		"chat",
		"agent",
		"tree",
		"conversation",
		"spatial"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gettraek/traek.git"
	}
}
